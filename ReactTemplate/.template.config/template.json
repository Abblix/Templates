{
    "$schema": "http://json.schemastore.org/template",
    "author": "abblix.com",
    "classifications": [
        "WebAPI",
        "ASP.NET Core",
        "React",
        "TypeScript",
        "Vite"
    ],
    "name": "ASP.NET Core WebAPI with React and Vite",
    "description": "An ASP.NET Core WebAPI project template with React, TypeScript and Vite.",
    "precedence": "0",
    "identity": "Abblix.ReactTemplate",
    "groupIdentity": "Abblix.Templates",
    "sourceName": "ReactTemplate",
    "shortName": "abblix-react",
    "aliases": [
        "react-net8",
        "react-typescript",
        "react-vite"
    ],
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "preferNameDirectory": true,
    "postActions": [
        {
            "description": "Restore npm packages for ClientApp on Windows",
            "manualInstructions": [
                {
                    "text": "Run 'npm install' in the ClientApp directory"
                }
            ],
            "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
            "args": {
                "executable": "cmd",
                "args": "/c \"cd ClientApp && npm install\""
            },
            "continueOnError": true,
            "condition": "OS == 'Windows_NT'"
        },
        {
            "description": "Restore npm packages for ClientApp on Unix-based systems",
            "manualInstructions": [
                {
                    "text": "Run 'npm install' in the ClientApp directory"
                }
            ],
            "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
            "args": {
                "executable": "sh",
                "args": "-c 'cd ClientApp && npm install'"
            },
            "continueOnError": true,
            "condition": "OS != 'Windows_NT'"
        }
    ]
}